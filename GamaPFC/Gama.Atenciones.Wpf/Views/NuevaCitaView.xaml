<metro:MetroWindow x:Class="Gama.Atenciones.Wpf.Views.NuevaCitaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gama.Atenciones.Wpf.Views"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:actions="clr-namespace:Core.Util;assembly=Core"
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen"
        MaxWidth="550"
        BorderThickness="2"
        BorderBrush="{StaticResource AccentColorBrush}"
        mc:Ignorable="d"
       ResizeMode="NoResize"
        Title="Nueva Cita" 
        actions:DialogCloser.DialogResult="{Binding Cerrar}" 
                   Height="208" Width="267.164">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid Grid.IsSharedSizeScope="True">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" SharedSizeGroup="A"/>
        <RowDefinition Height="Auto" SharedSizeGroup="A"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <Image Margin="{StaticResource Margin}"
                  MaxHeight="55"
               Source="{Binding Cita.Persona.AvatarPath, Converter={StaticResource _PathToFullPathConverter}}"/>
      <StackPanel Orientation="Vertical" Grid.Row="1">
        <Label Margin="{StaticResource Margin}">Asistente</Label>
        <TextBox Margin="{StaticResource Margin}" Text="{Binding Cita.Asistente, UpdateSourceTrigger=PropertyChanged}"/>
      </StackPanel>
      <StackPanel Grid.Column="1">
        <Label Margin="{StaticResource Margin}">Fecha</Label>
        <DatePicker Margin="{StaticResource Margin}" 
                                SelectedDate="{Binding Cita.Inicio, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                Height="18"/>
      </StackPanel>

      <StackPanel Grid.Column="1" Grid.Row="1">
        <Label Margin="{StaticResource Margin}">Sala</Label>
        <TextBox Margin="{StaticResource Margin}" Text="{Binding Cita.Sala, UpdateSourceTrigger=PropertyChanged}"/>
      </StackPanel>
    </Grid>
    <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Right">
      <Button Content="Aceptar" Command="{Binding AceptarCommand}"  Margin="{StaticResource Margin}"/>
      <Button Content="Cancelar" Command="{Binding CancelarCommand}"  Margin="{StaticResource Margin}"/>
    </StackPanel>
  </Grid>
</metro:MetroWindow>
