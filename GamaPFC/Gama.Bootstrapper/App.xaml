<Application x:Class="Gama.Bootstrapper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:Gama.Bootstrapper">
    <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Gama.Common;component/Resources/GamaStyles.xaml"/>
        <ResourceDictionary>
          <Style x:Key="CustomMetroWindowStyle" TargetType="{x:Type metro:MetroWindow}">
            <Setter Property="Background"
          Value="#FFE4E2E2" />
            <Setter Property="BorderBrush"
          Value="#FFB9B9B9" />
            <Setter Property="BorderThickness"
          Value="0,1,0,0" />
          </Style>
        </ResourceDictionary>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
