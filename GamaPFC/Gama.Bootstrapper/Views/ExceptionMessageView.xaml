<Window x:Class="Gama.Bootstrapper.Views.ExceptionMessageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gama.Bootstrapper.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Excepción No Manejada" Width="365" d:DesignHeight="157.319">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <StackPanel Orientation="Vertical">
      <TextBlock Margin="4" TextWrapping="Wrap">
        <Run Text="¡Oops! Parece que algo ha salido mal:"/>
        <Run Text="{Binding Message, Mode=OneWay}"/>
      </TextBlock>
      <TextBlock Margin="4" Text="{Binding InnerException, Mode=OneWay}" TextWrapping="Wrap"
                 IsHitTestVisible="True"/>
      <TextBlock Margin="4" Text="{Binding StackTrace, Mode=OneWay}"  TextWrapping="Wrap"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
      <Button x:Name="_CerrarButton" Margin="4" Padding="4">Cerrar</Button>
    </StackPanel>
  </Grid>
</Window>
