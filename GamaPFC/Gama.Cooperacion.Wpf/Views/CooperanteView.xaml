        <ControlTemplate x:Key="DataItemControlTemplate">
            <Grid Name="DatoListBoxActividades" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="800"/>
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Label Name="SinEnlace" Grid.Column="0">
                    <TextBlock  Foreground="Black" FontSize="18" FontWeight="Bold" Visibility="Visible">
                        <Run Text="{Binding Id}" FontSize="18" />
                        <Run Text=" " FontSize="18" />
                        <Run Text="{Binding DisplayMember1}" FontSize="18" />
                    </TextBlock>
                </Label>
                <Label Name="Enlace" Grid.Column="0" Visibility="Hidden">
                    <Hyperlink Foreground="Blue" FontWeight="Bold" Command="{Binding DataContext.SelectActividadCommand, ElementName=_Root}" CommandParameter="{Binding}">
                        <TextBlock FontSize="18" Visibility="Visible">
                            <Run Text="{Binding Id}" FontSize="18" />
                            <Run Text=" " FontSize="18" />
                            <Run Text="{Binding DisplayMember1}" FontSize="18" />
                        </TextBlock>
                    </Hyperlink>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseEnter" >
                            <i:InvokeCommandAction Command="{Binding DataContext.InfoActividadCommand, ElementName=_Root}" CommandParameter="{Binding}" />
                        </i:EventTrigger>
                        <i:EventTrigger EventName="MouseLeave" >
                            <i:InvokeCommandAction Command="{Binding DataContext.InfoActividadCommand2, ElementName=_Root}" CommandParameter="{Binding}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Label>
            </Grid>
            <ControlTemplate.Triggers>
                <DataTrigger Binding="{Binding ElementName=DatoListBoxActividades, Path=IsMouseOver}" Value="True">
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter TargetName="Enlace" Property="Visibility" Value="Visible" />
                    <Setter TargetName="SinEnlace" Property="Visibility" Value="Hidden" />
                </DataTrigger>
                <DataTrigger Binding="{Binding ElementName=DatoOriginal, Path=IsMouseOver}" Value="False">
                    <!--Si pones cursor value a Pen Cuando esta raton encima de Hiperlink pone una mano y 
                    cuando no esta encima del hiperlink pero apunta todavia al list sale un lapiz-->
                </DataTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

