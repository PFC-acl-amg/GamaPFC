                                                  BorderThickness="1"
                                                  metro:TextBoxHelper.Watermark="Observaciones..."
                                                  TextWrapping="Wrap"
                                                  Margin="{StaticResource Margin}"
                                                  Text="{Binding CooperanteSeleccionado.Observaciones,UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>



                                </StackPanel>
                            </Border>
                            <!-- Border Para Poner la lista de actividades -->
                            <Border BorderBrush="Black"  Background="White" BorderThickness="0,1,1,1" Visibility="{Binding VisibleListaActividadesCooperante, 
                                                Converter={StaticResource BooleanToVisivilityConverter}}"
                                             Grid.Column="1" Grid.Row="0">
                                <StackPanel Name="ListaActividades1" Margin="10,0,0,0">
                                    <Label>Coordinadora</Label>
                                    <Border BorderThickness="0" BorderBrush="Black" Padding="10" Margin="{StaticResource Margin}"
                                                            Panel.ZIndex="999">
                                        <Border.Style>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=listBox, Path=Items.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock HorizontalAlignment="Center">No Coordina ninguna Actividad</TextBlock>
                                    </Border>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                                        <ListBox ItemsSource="{Binding ElementName=_Root,Path=DataContext.ListaDeActividadesCoordina}"
                                                     x:Name="listBox"
                                                     SelectionMode="Single"
                                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <ContentControl Template="{StaticResource DataItemControlTemplate}" />
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>

                                            <ListBox.Resources>
                                                <Style TargetType="{x:Type ListBoxItem}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                                <Border x:Name="Bd"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}"
                                                SnapsToDevicePixels="true">
                                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                                </Border>

                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.Resources>

                                        </ListBox>
                                    </ScrollViewer>
                                    <Label>Cooperante</Label>
                                    <Border BorderThickness="0" BorderBrush="Black" Padding="10" Margin="{StaticResource Margin}"
                                                            Panel.ZIndex="999">
                                        <Border.Style>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=listBox2, Path=Items.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock HorizontalAlignment="Center">No coopera en ninguna Actividad</TextBlock>
                                    </Border>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                                        <ListBox ItemsSource="{Binding ElementName=_Root,Path=DataContext.ListaDeActividadesCooperante}"
                                                     x:Name="listBox2"
                                                     SelectionMode="Single"
                                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <ContentControl Template="{StaticResource DataItemControlTemplate}" />
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>

                                            <ListBox.Resources>
                                                <Style TargetType="{x:Type ListBoxItem}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                                <Border x:Name="Bd"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}"
                                                SnapsToDevicePixels="true">
                                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                                </Border>

                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.Resources>
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseDoubleClick">
                                                    <prism:InvokeCommandAction 
                                    Command="{Binding SelectActividadCommand}"
                                    CommandParameter="{Binding ElementName=listBox, Path=SelectedItem}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBox>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>

                            <Border BorderBrush="Black"  Background="White" BorderThickness="0,1,1,1" Visibility="{Binding VisibleContacto, 
                                                Converter={StaticResource BooleanToVisivilityConverter}}"
                                             Grid.Column="1" Grid.Row="0">
                                <StackPanel>
                                    <Label>
                                        Zona de datos de contacto
                                    </Label>
                                </StackPanel>
                            </Border>

                            <Border BorderBrush="Black"  Background="White" BorderThickness="0,1,1,1" Visibility="{Binding VisibleDireccion, 
                                                Converter={StaticResource BooleanToVisivilityConverter}}"
                                             Grid.Column="1" Grid.Row="0">
                                <StackPanel>
                                    <Label>
                                        Zona de datos de Direccion cooperante seleccionado
                                    </Label>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Margin="10,0,10,0"  Background="White" Visibility="{Binding VisibleImagenSeleccionCooperante, 
                                                Converter={StaticResource BooleanToVisivilityConverter}}">
                    <StackPanel>
                        <Image Source="{StaticResource IconoDedoAcusador}" Height="400" Width="400" Margin="10,10,100,10" HorizontalAlignment="center"/>
                        <Label x:Name="_EscogerCooperante" Height="45" 
                                                Content="Escoge un Cooperante"  
                                                MouseLeftButtonDown="Label_EscogerCooperante"
                                                FontSize="24" HorizontalContentAlignment="Center">
                        </Label>
                    </StackPanel>
                </Border>
                <!--<Label Grid.Row="2" HorizontalAlignment="Center">Seleccione un Cooperante</Label>-->
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
