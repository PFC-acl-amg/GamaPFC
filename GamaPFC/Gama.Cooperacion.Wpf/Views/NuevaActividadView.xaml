<metro:MetroWindow x:Class="Gama.Cooperacion.Wpf.Views.NuevaActividadView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gama.Cooperacion.Wpf.Views"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:designData="clr-namespace:Gama.Cooperacion.Wpf.DesignTimeData"
        xmlns:cc="clr-namespace:Gama.Common.CustomControls;assembly=Gama.Common"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="Nueva Actividad" d:DesignWidth="441.288" d:DesignHeight="376.781">
  <d:DataContext>
    <designData:DesignTimeDataViewModel/>
  </d:DataContext>
  <Window.Resources>
    <DataTemplate x:Key="nuevoCooperanteDataTemplate">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                  Text="Introduce el nombre aquí..."
                  Margin="{StaticResource Margin}"/>

        <StackPanel Grid.Column="1" Orientation="Horizontal">
          <Button Content="B"
                  Margin="{StaticResource Margin}"/>
          <Button Content="X"
                  Margin="{StaticResource Margin}"/>
        </StackPanel>
      </Grid>
    </DataTemplate>
  </Window.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBox Grid.Row="0" BorderThickness="1"
                 Text="{Binding Actividad.Titulo}"
                  Margin="{StaticResource Margin}"/>
    <TextBox Grid.Row="1" Text="{Binding Actividad.Descripcion}"
                 MinLines="4"
                 AcceptsReturn="True"/>
    <Label Grid.Row="2">Coordinador</Label>

    <Grid Grid.Row="3">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <TextBlock Grid.Column="0"
                       Text="{Binding NombreBusquedaCoordinador}"/>

      <StackPanel Orientation="Horizontal" Grid.Column="1">
        <Button Content="B"/>
        <Button Content="X"/>
        <Rectangle 
              Stretch="Fill"
              Width="18"
              Height="24"
              Margin="{StaticResource Margin}"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
          <Rectangle.Fill>
            <VisualBrush Visual="{StaticResource appbar_page_search}" />
          </Rectangle.Fill>
        </Rectangle>
      </StackPanel>
    </Grid>

    <Label Grid.Row="4">Cooperantes</Label>
    <ListBox Grid.Row="5"
                 ItemsSource="{Binding Cooperantes}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition />
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <cc:SearchBox Grid.Column="0"
                  Text="Introduce el nombre aquí..."
                  Margin="{StaticResource Margin}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
              <Button Content="B"
                  Margin="{StaticResource Margin}"/>
              <Button Content="X"
                  Margin="{StaticResource Margin}"/>
            </StackPanel>
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <Button Grid.Row="6" HorizontalAlignment="Right" 
            Style="{StaticResource EstiloBotonPredeterminado}"
            Command="{Binding NuevoCooperanteCommand}"
            Content="Nuevo"/>

    <StackPanel Grid.Row="7" Orientation="Horizontal"
                    HorizontalAlignment="Right">
      <Button Content="Aceptar" Command="{Binding AceptarCommand}"/>
      <Button Content="Cancelar"/>
    </StackPanel>
  </Grid>
</metro:MetroWindow>
