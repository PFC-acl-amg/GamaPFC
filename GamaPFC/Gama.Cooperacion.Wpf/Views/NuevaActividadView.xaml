<metro:MetroWindow x:Class="Gama.Cooperacion.Wpf.Views.NuevaActividadView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gama.Cooperacion.Wpf.Views"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:designData="clr-namespace:Gama.Cooperacion.Wpf.DesignTimeData"
        xmlns:cc="clr-namespace:Gama.Common.CustomControls;assembly=Gama.Common"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:actions="clr-namespace:Gama.Cooperacion.Wpf.Actions"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="Nueva Actividad" d:DesignWidth="477.288" d:DesignHeight="376.781"
        WindowStartupLocation="CenterScreen"
        BorderThickness="1"
        actions:DialogCloser.DialogResult="{Binding Cerrar}">
  <d:DataContext>
    <designData:DesignTimeDataViewModel/>
  </d:DataContext>
  <Window.Resources>
    <DataTemplate x:Key="nuevoCooperanteDataTemplate">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                  Text="Introduce el nombre aquí..."
                  Margin="{StaticResource Margin}"/>

        <StackPanel Grid.Column="1" Orientation="Horizontal">
          <Button Content="B"
                  Margin="{StaticResource Margin}"/>
          <Button Content="X"
                  Margin="{StaticResource Margin}"/>
        </StackPanel>
      </Grid>
    </DataTemplate>
  </Window.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Popup x:Name="popup"
      IsOpen="{Binding PopupEstaAbierto}" 
      StaysOpen="False"
      Placement="MousePoint"
      AllowsTransparency="True" 
      Opened="Popup_Opened">
      <local:ListaEmergenteDeCooperantes Opacity="1"/>
    </Popup>
    
    <TextBox 
      Grid.Row="0" BorderThickness="1"
      Text="{Binding Actividad.Titulo}"
      metro:TextBoxHelper.Watermark="Introduce el título..."
      Margin="{StaticResource Margin}"/>
    <TextBox Grid.Row="1" 
             Text="{Binding Actividad.Descripcion}"
             metro:TextBoxHelper.Watermark="Introduce la descripción..."
             MinLines="4"
             AcceptsReturn="True"/>
    <Label Grid.Row="2" Margin="{StaticResource Margin}">Coordinador</Label>

    <Grid Grid.Row="3" >
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <TextBlock Grid.Column="0"
                       Text="{Binding NombreBusquedaCoordinador}"/>

      <StackPanel Orientation="Horizontal" Grid.Column="1">
        <Button Content="Buscar" Margin="{StaticResource Margin}"
                Command="{Binding AbrirPopupCoordinadorCommand}"/>
        <Button Content="X" Margin="{StaticResource Margin}"/>
        <Rectangle 
              Stretch="Fill"
              Width="18"
              Height="24"
              Margin="{StaticResource Margin}"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
          <Rectangle.Fill>
            <VisualBrush Visual="{StaticResource appbar_page_search}" />
          </Rectangle.Fill>
        </Rectangle>
      </StackPanel>
    </Grid>

    <Label Grid.Row="4"  Margin="{StaticResource Margin}">Cooperantes</Label>
    <ListBox x:Name="cooperantesListBox"
        Grid.Row="5"
        ItemsSource="{Binding Actividad.Cooperantes}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition />
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <cc:SearchBox Grid.Column="0"
                  Text="Introduce el nombre aquí..."
                  Margin="{StaticResource Margin}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
              <Button Content="Buscar" Margin="{StaticResource Margin}"
                Command="{Binding DataContext.AbrirPopupCooperanteCommand, 
                  RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                  CommandParameter="{Binding}"/>
              <Button Content="X" Margin="{StaticResource Margin}"/>
            </StackPanel>
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <Button Grid.Row="6" HorizontalAlignment="Right" 
            Style="{StaticResource EstiloBotonPredeterminado}"
            Command="{Binding NuevoCooperanteCommand}"
            Content="Nuevo"/>

    <StackPanel Grid.Row="7" Orientation="Horizontal"
                    HorizontalAlignment="Right">
      <Button Content="Aceptar" Command="{Binding AceptarCommand}"/>
      <Button Content="Cancelar" Command="{Binding CancelarCommand}"/>
    </StackPanel>
  </Grid>
</metro:MetroWindow>
