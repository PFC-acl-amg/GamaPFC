                                                            RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                                            CommandParameter="{Binding}" Margin="{StaticResource Margin}" >
                                                </Button>
                                            </StackPanel>


                                        </Expander>

                                    </Grid>
                                </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                </StackPanel>
            </Grid>

        </GroupBox>
        
<!--Aqui comienza el tratamiento de las tareas-->
        
