                                                                        <Hyperlink Command="{Binding DataContext.MensajesForoCommand,
                                                                            RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                                                            CommandParameter="{Binding}">
                                                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding Responsable.Nombre}"   />
                                                                        </Hyperlink>
                                                                    </Label>
                                                                </Grid>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition />
                                                                        <RowDefinition />
                                                                    </Grid.RowDefinitions>

                                                                    <TextBlock Grid.Row="0" HorizontalAlignment="Center" Margin="{StaticResource Margin}" 
                                                                        Text="{Binding FechaDeFinalizacion.Date,StringFormat='dd/MM/yyyy'}"/>
                                                                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="{StaticResource Margin}" 
                                                                        Text="{Binding FechaDeFinalizacion,StringFormat='HH:mm:ss'}"/>
                                                                </Grid>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="2" Grid.RowSpan="2">
                                                                <TextBlock Margin="{StaticResource Margin}" Text="{Binding Descripcion}"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>
                                                </Border>
                                                <Expander Grid.Column="3" Margin="{StaticResource MarginHalfNoHorizontal}"
                                                      ExpandDirection="Left">

                                                    <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0"  >
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>
                                                            
                                                        
                                                        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
                                                            <Hyperlink Command="{Binding DataContext.InfoTareaCommand,
                                                                            RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                                                            CommandParameter="{Binding}">
                                                                Incidencia (<TextBlock Text="{Binding Incidencias.Count}"/>)
                                               
                                                            </Hyperlink>
                                                        </Label>
                                                        <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                                                            <Hyperlink Command="{Binding DataContext.SeguimientoTareaCommand,
                                                                            RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                                                            CommandParameter="{Binding}">
                                                                    Seguimiento (<TextBlock Text="{Binding Seguimiento.Count}"/>)
                                                                </Hyperlink>
                                                        </Label>
                                                        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
                                                            <Hyperlink Command="{Binding DataContext.EditarTareaCommand,
                                                                            RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                                                            CommandParameter="{Binding}">
                                                                Modificar
                                                            </Hyperlink>
                                                        </Label>
                                                        <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
                                                            <Hyperlink Command="{Binding DataContext.BorrarTareaCommand,
                                                                            RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                                                            CommandParameter="{Binding}">
                                                                Eliminar
                                                            </Hyperlink>
                                                        </Label>
                                                        </Grid>
                                                    </StackPanel>


                                                </Expander>

                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Grid>





