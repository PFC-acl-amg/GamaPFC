             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="650">
    <d:DataContext>
        <designData:TareasDeActividadViewModelDTD/>
    </d:DataContext>
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisivilityConverter"/>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Visible" Height="600"> <!--valor bueno height=560-->
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185*"/>
            <ColumnDefinition Width="121*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="1" Name="ListaEventos" Grid.ColumnSpan="2" Margin="{StaticResource Margin}">
            <GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" HorizontalAlignment="Left" Content="EVENTOS" Foreground="White" Padding="0"></Label>
                    <Button Content="All" Foreground="red" HorizontalAlignment="Right"></Button>
                </Grid>
            </GroupBox.Header>
            <Grid>
                    <!--<Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>-->
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <!--Fila mostrar los mensajes publicados-->
                        <RowDefinition/>
                        <!--Fila mostar stackpanel para insertar nuevos mensajes-->
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListBox x:Name="Eventosss" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="165"
                                    ItemsSource="{Binding EventoActividad}" >
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border  BorderBrush="Black"
                                            BorderThickness="1.5" 
                                            CornerRadius="3"
                                            Margin="{StaticResource MarginHalfNoHorizontal}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Margin="{StaticResource Margin}" 
                                                                   Text="{Binding FechaDePublicacion.Date,StringFormat='dd/MM/yyyy'}"/>
                                                        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="{StaticResource Margin}" 
                                                                   Text="{Binding FechaDePublicacion,StringFormat='HH:mm:ss'}"/>
                                                    </Grid>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Grid.Row="0" Margin="{StaticResource Margin}" Text="{Binding Ocurrencia}"/>
                                                        <TextBlock Grid.Row="1" Margin="{StaticResource Margin}" Text="{Binding Titulo}"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
