                <Grid.RowDefinitions>
                    <RowDefinition />   <!--Fila mostrar los mensajes publicados-->
                    <RowDefinition/>    <!--Fila mostar stackpanel para insertar nuevos mensajes-->
                </Grid.RowDefinitions>
