                <ListBox x:Name="MensajesListBox3" 
                         ItemsSource="{Binding ForosDisponibles}"
                         Visibility="{Binding OcultarForoVisible, 
                         Converter={StaticResource BooleanToVisivilityConverter}}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                                    <Grid >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border  BorderBrush="Black"
                                        BorderThickness="1.5" 
                                        CornerRadius="3"
                                        Margin="{StaticResource MarginHalfNoHorizontal}">
                                            <StackPanel Grid.Column="0">
                                                <Grid >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80" />
                                                        <ColumnDefinition Width="80" />
                                                        <ColumnDefinition />

                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" >
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition ></RowDefinition>
                                                                <RowDefinition ></RowDefinition>
                                                            </Grid.RowDefinitions>
                                                            <Rectangle Grid.Row="0" Margin="{StaticResource Margin}" Height="20" Width="30">
                                                                <Rectangle.Fill>
                                                                    <VisualBrush Visual="{StaticResource appbar_chat}" />
                                                                </Rectangle.Fill>
                                                            </Rectangle>
                                                            <Label Grid.Row="1" HorizontalAlignment="Center">
                                                                <Hyperlink Command="{Binding DataContext.MensajesForoCommand,
                                                            RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                                            CommandParameter="{Binding}">
