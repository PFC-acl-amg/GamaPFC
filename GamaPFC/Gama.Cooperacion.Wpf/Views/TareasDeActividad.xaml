                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Content="{Binding FechaDePublicacion}"  />
                                        <Label Grid.Column="1" Content="{Binding Ocurrencia}" />
                                        <Label Grid.Column="2" Content="{Binding Titulo}" />
                                    </Grid>-->
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
        </GroupBox>

